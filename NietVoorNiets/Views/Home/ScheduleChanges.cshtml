
@{
    ViewBag.Title = "ScheduleChanges";
}

<div>
    <h1 class="message-title">Rooster wijzigingen</h1>

    <table cellpadding="10" class="tabel-klassen">
        <thead>
            <tr>
                <th colspan="3" style="color: #349383">@ViewBag.Klas</th>
            </tr>
        </thead>
        <thead>
            <tr>                
                <th colspan="2">Datum</th>
                <th colspan="3">Melding</th>
            </tr>
        </thead> 
      
    
            @foreach (var change in ViewBag.Changes)
            {
                <tr > 
                            
                    <td width="100px" style="background-color: #8BCB97; padding:10px; ">@change.CreatedAt</td>
                    <td style="padding:10px;" colspan="3">@change["Pushnotification"]</td>                    
                </tr>
            }
       
      
        </table>
    <div style="width:650px;">
        <ul>
            <li class="navigatie-item" style="background-color: #8ECD99; float:right;"><a class="navigatie-item-tekst" href="@Url.Action("Index", "Home")">Terug</a></li>
        </ul>
    </div>
     
</div>

