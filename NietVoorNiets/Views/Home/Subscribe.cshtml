<div class="header-abonneer">
    <h1>Abonneren</h1>
    <p>Als je je aanmeld, krijg je de wijzigingen ook via de mail.</p>
</div>

<div class="geheel-formulier">
    
    <form method="post">
        <p>
            <label class="label-inloggen">E-mail</label>
            <input class="input-inloggen" type="text" name="emailadres" required />
        </p>
        <p>
            <label class="label-inloggen">Klas</label>
            <select class="selecteer-klassen" name="klasnaam" required>
                @foreach (var klas in ViewBag.Message)
                {
                    <option value="@klas["Klasnaam"]">@klas["Klasnaam"]</option>
                }
            </select>
        </p>
        <p>
            <input class="abonneer-knop" type="submit" value="Aanmelden"/>
            <a href="@Url.Action("Index", "Home")"><input class="abonneer-knop" style="float:right; margin-right:4px;" type="button" value="Terug"></a>
        </p>
    </form>
</div>