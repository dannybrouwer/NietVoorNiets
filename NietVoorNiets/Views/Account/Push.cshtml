@{
    ViewBag.Title = "Push";
}

<h1 class="message">Verstuur een notificatie</h1>
<div class="geheel-formulier">
    <form method="post">
        <p class="inlog-box">
            <label class="label-inloggen">Klas</label>
            <input id="klas" name="klasnaam" type="text" value="@ViewBag.ID" class="input-inloggen" readonly />
        </p>
        <p class="inlog-box">
            <label class="label-inloggen">Bericht</label>
            <textarea class="area-inloggen" id="message" placeholder="Voer hier uw bericht in" name="message" required></textarea>

                <input type="hidden" value="@ViewBag.GroupID" name="GroupId" />

        </p>

        <div style="float:right; clear: both;">
            <p style="margin-top: 10px;">
                <input class="inlog-knop" type="submit" value="Verstuur" />
                <a href="@Url.Action("Index", "Home")"><input class="inlog-knop" type="button" value="Terug" /></a>
            </p>
        </div>
    </form>
</div>