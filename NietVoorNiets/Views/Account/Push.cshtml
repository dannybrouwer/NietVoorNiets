@{
    ViewBag.Title = "Push";
}

<script type="text/javascript">
    function savePush() {
        var Message = document.getElementById('message').value;
        var Klas = document.getElementById('klas').value;

        Parse.initialize("QGr7SiC0ROlcAJsSmB4ryzFgviGcNYMPz7JlCvCa", "225C2xK4PLFjcBx86zyHxEsgAYFaLRAsfrXy7V1j");
        var Push = Parse.Object.extend("Push");
        var push = new Push();
        push.save({ Pushnotification: Message }),
        push.save({ Klasnaam: Klas });
    }
</script>
<div class="form">
    <h1 class="message">Verstuur een notificatie</h1>

    <form method="post">
        
        
            <label>Klas</label>
       
            <select name="klasnaam">
                @foreach (var klas in ViewBag.Message)
                {
                    <option id="klas" value="@klas["Klasnaam"]">@klas["Klasnaam"]</option>
                }
            </select>
       <br />
        <label>Bericht</label>
        <textarea id="message" placeholder="Voer hier uw bericht in" name="message"></textarea><br />
        <input type="submit" onclick="savePush()" class="pure-button pure-button-primary" style="float:right" />
    </form>
</div>



