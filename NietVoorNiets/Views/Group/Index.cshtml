﻿<h1>Klassen</h1>
<div class="navigatie">
    <ul class="index-navigatie-box">
        <li class="navigatie-item"><a class="navigatie-item-tekst" href="@Url.Action("Login", "Account")">Inloggen</a></li>
        <li class="navigatie-item"><a class="navigatie-item-tekst" href="@Url.Action("Subscribe", "Home")">Abonneren</a></li>
    </ul>
</div>

<div class="klassen-box">
    @foreach (var group in ViewBag.Groups)
    {
        <ul class="index-klassen-box">
            <li class="index-klassen"><a class="index-klassen-tekst" href="@Url.Action("ScheduleChanges", "Home", new { id = group["Klasnaam"] })">@group["Klasnaam"]</a></li>
        </ul>
    }
</div>
